<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title><%= title%></title>
</head>
<body>
    <!-- Creating the navigation of the website -->
    <nav>
        <div class="container">
            <ul>
                <li onClick="window.location.reload()" style="cursor:pointer;">Advocate Platform</li>
                <li class="goright"><a href="logout">Sign Out</a></li>
                <li class="gooright"><%= username %></li>
            </ul>
        </div>
    </nav>
    <!-- Creating the Component Section -->
    <section id="Components">
        <div class="container">
            <h1>Devices</h1>
            <div id="box">
                <h1><%= username %> Devices</h1>
                <!-- Listing all the devices of the Current  -->
                <% product.forEach(function (products) { %>
                <ul class="Items">
                    <li class="listedItems" style="cursor: pointer;" onclick="takeaction(<%= products.deviceID %>)" >  
                        <!-- Displaying all the devices on static html-->
                        <h2><%= products.companyID %></h2>
                        <h3><%= products._id %></h3>
                        <h3><%= products.deviceType %></h3>
                    </li>
                </ul>                                   
                <% }) %>         
            </div>
        </div>
    </section>
    <script src="/js/ItemList.js"></script>
</body>
</html>