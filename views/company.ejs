<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" href="/images/favicon.png" type="image/png" size="32x32">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title><%= title%></title>
</head>
<body>
    <!-- Creating the navigation of the website -->
    <nav>
        <div class="container">
            <ul>
                <li onClick="window.location.reload()" style="cursor:pointer;">Advocate Platform</li>
                <li class="goright"><a href="logout">Sign Out</a></li>
                <li class="gooright"><%= username %></li>
            </ul>
        </div>
    </nav>
    <!-- Creating the Component Section -->
    <section id="Components">
        <div class="container">
            <div id="box" >
                <h1><%= username %> Devices</h1>
                <!-- Listing all the devices of the Current  -->
                <% product.forEach(function (products) {    %>
                <ul class="Items" >
                    <li id="listedItems" style="cursor: pointer;" onclick="give('<%= products.id %>','<%= products.deviceType %>')">
                        <h2><%= products.companyID%></h2>
                        <h3 class="take"><%= products.id %></h3>
                        <h4><%= products.deviceType %></h4>
                        
                    </li>
                </ul>
                <% }) %>
            </div>
        </div>
    </section>
    



    <!--  Adding Scripting files -->
    <script src="/js/ItemList.js"></script>
</body>
</html>
